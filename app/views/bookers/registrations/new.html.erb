<div class="container">
  <h2>Sign up here</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.input :email, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.input :password, autocomplete: "off", required: true %>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, autocomplete: "off", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "bookers/shared/links" %>
</div>
